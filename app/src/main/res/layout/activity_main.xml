<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/createTripButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/create_trip"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:background="@color/colorPrimary"
            android:onClick="@string/create_trip_method_name"
            android:padding="10dp"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/selectTripButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:background="@color/colorPrimary"
            android:padding="10dp"
            android:text="@string/select_trip"
            android:textColor="@color/colorAccent"
            android:textSize="36sp"
            android:onClick="@string/select_trip_method_name"/>

        <!--android:onClick="viewTrip"-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>